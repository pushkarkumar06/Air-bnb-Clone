<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control" required />
                    <div class="valid-feedback"> Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input name="email" id="email" type="email" class="form-control" required />
                </div>

                <div class=" mb-3 position-relative">
                    <!-- <label for="password">Password</label> -->
                    <input type="password" name="password" id="password" class="form-control pe-5"
                        placeholder="Enter password" />
                    <i class="fa fa-eye" id="togglePassword"
                        style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer; color: #6c757d;"></i>
                </div>

                <button class="btn btn-success mb-5">SignUp</button>

            </form>

        </div>


    </div>