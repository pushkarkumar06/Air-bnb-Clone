<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
    <div class="col-6 offset-3">
        <h3>Edit Your Review</h3>
        <form action="/listings/<%= listingId %>/reviews/<%= review._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating (1-5)</label>
                <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" value="<%= review.rating %>">
            </div>

            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea class="form-control" id="comment" name="review[comment]" rows="4" required><%= review.comment %></textarea>
            </div>

            <!-- Buttons with bottom spacing -->
            <div class="d-flex justify-content-start mb-5">
                <button type="submit" class="btn btn-dark">Update Review</button>
                <a href="/listings/<%= listingId %>" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>


